@model venteEnligneApp.ViewModels.CreateRoleViewModel
@{
    ViewBag.Title = "Créer un nouveau Role";
}
<h1>Créer un nouveau Role</h1>
<form asp-action="CreateRole" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">

        <label asp-for="RoleName" class="col-sm-2-form-label">Nom</label>

        <div class="col-sm-10">

            <input asp-for="RoleName" class="form-control" placeholder="Name">
            <span asp-validation-for="RoleName" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">

            <button type="submit" class="btn btn-primary" style="width : auto">

                Créer un Role
            </button>
        </div>
    </div>
</form>