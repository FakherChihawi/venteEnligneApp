@model IEnumerable<venteEnligneApp.Models.Article>

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form class="form-inline my-2 my-lg-0" asp-action="Search" asp-controller="Student">
    <p>
        <input size="30" placeholder="tapez un Nom" type="search" name="name" />
        <select asp-items="ViewBag.SchoolID" name="schoolid" size=1.5 style="width:300px ; height:30px"></select>
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Recherche</button>
    </p>
</form>

@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prix)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marque)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prix)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marque)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categorie.Nom)
                    </td>
                    <td>
                        <a asp-controller="Article" asp-action="Details" asp-route-id="@item.Id"
                           class="btn btn-primary m-1">View</a>
                        <a asp-action="Edit" asp-controller="Article" class="btn btn-primary m-1" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" asp-controller="Article" class="btn btn-danger m-1" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="card-group">
        @foreach (var item in Model)
        {
            var photoPath = "~/images/" + (item.Image ?? "noimage.jpg");
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h5><b>Nom : </b> @item.Nom</h5>
                    <h5><b>Prix : </b>@item.Prix</h5>
                    <h5><b>Marque : </b> @item.Marque</h5>
                </div>
                <img class="card-img-top imageThumbnail" src="@photoPath"
                     asp-append-version="true" />
                <div class="card-footer text-center">
                    <a asp-controller="Article" asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-primary m-1">View</a>
                    <a asp-action="Edit" asp-controller="Article" class="btn btn-primary m-1" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Article" class="btn btn-danger m-1" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
        }
    </div>
}